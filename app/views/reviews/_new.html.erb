<%= simple_form_for @review do |f| %>
  <div class="form-inputs">
    <%= f.input :rating, as: :integer,
                collection: 0..5,
                required: true,
                autofocus: false,
                input_html: { value: @review.rating} %>
    <%= f.input :content,
                as: :text,
                required: true,
                autofocus: true,
                input_html: { @review.content},
                placeholder: 'Please add a small message...' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
