<h1>List of Events</h1>

<ul>
  <% @events.each do |event| %>
    <% if event.jobs.present? %>
      <%= link_to organizer_event_path(event) do %>
        <li><%= event.name %></li>
      <% end %>
    <% end %>
  <% end %>
</ul>

<div
  id="map"
  style="width: 40%;
  height: 200px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>