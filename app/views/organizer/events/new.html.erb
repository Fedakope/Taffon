<% if current_user.organizer? %>

<h1>Create new event</h1>


<%= simple_form_for [:organizer, @event] do |f| %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :full_address %>
  <%= f.input :company %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>

  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>

<% end %>