      <h1><%= @event.name %></h1>
    </div>
  </div>
</div>

Picture: <%= @event.picture_url %>



<div class="corps">
  
  <h2>Description: <%= @event.description %></h2>
  <h2>Company: <%= @event.company %></h2>
  <h2>User email: <%= @event.user.email %></h2>
  <h2>Lieu : <%= @event.full_address %></h2>
  <div
    id="map"
    style="width: 40%;
    height: 200px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </ul>
</div>

<% if @event.user == current_user %>
<%= link_to 'Edit', edit_organizer_event_path(@event), class: "btn btn-primary" %>
<%= link_to 'Delete', organizer_event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>



<% category=[] %>
<% skills=Skill.all %>
<% skills.each do |s| %>
<% category << s.category %>
<% end %>


<% name=[] %>
<% skills=Skill.all %>
<% skills.each do |s| %>
<% name << s.name %>
<% end %>



  <%= simple_form_for [:organizer, @event, @job] do |f| %>
 <div id="list" data-job-categories="<%= Skill.all.to_json %>">
    <select class="form-control select optional" id="job_category">
      <option value=""></option>
      <option value="Son - Lumière">Son - Lumière</option>
      <option value="Vidéo - Image">Vidéo - Image</option>
      <option value="Structure - Rigger - Plateau">Structure - Rigger - Plateau</option>
      <option value="Emplois techniques des services généraux">Emplois techniques des services généraux</option>
      <option value="Décors - Costume">Décors - Costume</option>
    </select>
    <%= f.association :skill, label:'Choose a skill', collection: name.uniq %>
    <%= f.input :description, placeholder: "Add some free text to provide additional information.." %>
    <%= f.input :start_at, as: :string, input_html: {class: "datetimepicker"} %>
    <%= f.input :end_at, as: :string, input_html: {class: "datetimepicker"} %>
    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
</div>
<% end %>


<h2> Jobs list for <%= @event.name %>:</h2>
  <ul>
          <% @event.jobs.each do |job| %>
            <li><%= link_to 'See details', job_path(job) %> | <%= job.status %> | <%= job.event.name %> | <%= job.skill.category %> | <%= job.start_at %> | <%= job.end_at %>
              <% if current_user == @event.user %>
                <%= button_to "delete", organizer_event_job_path(@event, job), method: :delete %></li>
              <% end %>
    <% end %>
  </ul>



