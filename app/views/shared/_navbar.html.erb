<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to main_app.root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <% if current_user.organizer == false %>
        <%= link_to "List Events", main_app.organizer_events_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Browse Jobs", main_app.jobs_path , class: "navbar-wagon-item navbar-wagon-link" %>
      <% else %>
        <%= link_to "List Events", main_app.organizer_events_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Create Event", main_app.new_organizer_event_path , class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "List Technicians", main_app.users_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
            <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <span><%= link_to pluralize(Notification.unread_count(current_user), ''), main_app.notifications_path, class:"badge badge-secondary notif-badge" %></span>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <% user = current_user %>
              <%= link_to main_app.profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li><%= link_to pluralize(Notification.unread_count(current_user), 'Notification'), main_app.notifications_path %></li>
            <li>
              <%= link_to main_app.destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

      <%= link_to t(".sign_in", default: "Login"), main_app.new_user_session_path, class: "btn btn-ghost navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "Sign Up"), main_app.new_user_registration_path, class: "btn btn-ghost navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Profile</a></li>
        <li><a href="#">Sign out</a></li>
      </ul>
    </div>
  </div>
</div>

