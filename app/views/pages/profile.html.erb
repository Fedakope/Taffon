<div class="container tab">
  <%= render 'pages/profile/tabs' %>
</div>

<div class="profile-container">
  <div class="container" id='events-jobs-content'>
    <!-- onglet event ou job selon organizer ou technician -->
    <% if current_user.organizer? %>
      <%= render 'pages/profile/events' %>
    <% elsif current_user.organizer == false %>
      <%= render 'pages/profile/applies' %>
    <% end %>
  </div>

  <div class="container hidden" id='profile-content'>
    <%= render 'pages/profile/infos' %>
  </div>

  <div class="container hidden" id='reviews-content'>
    <%= render 'pages/profile/reviews' %>
  </div>
</div>
